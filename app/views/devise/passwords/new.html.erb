<div class='container bg-dark'>
  <div class='row'> 
    <div class='col-4'>
    </div>
    <div class='col-4 text-white'>        
          <h2 class = 'mt-10 text-center text-2xl font-bold leading-9 tracking-tight'>Forgot your password</h2>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :email, class:'block text-sm font-medium leading-4' %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3" %>
              </div>

              <div class="actions">
                <%= f.submit "Send me reset password instructions", class:'btn bg-primary text-white mb-3' %>
              </div>
              <%= render "devise/shared/links" %>
            <% end %>
      </div>      
    <div class='col-4'>
    </div>
  </div>               
</div>
