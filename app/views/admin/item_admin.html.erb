<h1 class="text-center mb-4"><strong>Category Of Dinner Dash</strong></h1>
<div class="container">
    <table class="table table-bordered">
    <thead>
        <tr>
        <th class="mx-auto text-center">Image</th>
        <th class="mx-auto text-center">Name</th>
        <th class="mx-auto text-center">Description</th>
        <th class="mx-auto text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td>
            <%= image_tag item.image, class: 'rounded-top', style: 'max-width: 100%; height: 100px;' %>
            </td>
            <td><strong><%= item.name %></strong></td>
            <td><%= item.description.truncate(35) %></td>
            <td>
            <div class="container">
                <div class="row">
                    <div class="col-4">
                    <a href="<%= new_item_path(item.id) %>" class="btn btn-primary btn-block">Add</a>
                    </div>
                    <div class="col-4">
                    <a href="<%= edit_item_path(item.id) %>" class="btn btn-warning btn-block">Edit</a>
                    </div>
                    <div class="col-4">
                    <%= link_to "Delete", "delete/#{item.id}", data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %>
                    </div>
                </div>
            </div>

            </td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>

